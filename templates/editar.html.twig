{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
{% endblock %}

{% block body %}

    {{ form_start(formulario) }}
        {{form_row(formulario.id, {attr:{value: datos.getId()}})}}
        {{form_row(formulario.nombre)}}
        {{form_row(formulario.email, {label:"Email",attr:{value: datos.getEmail()}})}}
        {{form_row(formulario.horario, {label:"Horario Preferido",attr:{value: datos.getHorario()}})}}
        {{form_row(formulario.ciudad, {label:"Ciudad",attr:{value: datos.getCiudad()}})}}
        {{form_row(formulario.politica_privacidad, {label:"He leído y acepto la política de privacidad",attr:{value: datos.getPoliticaPrivacidad()}})}}
        {{form_row(formulario.enviar, {attr:{'class':"formulario__boton"}})}}
    
    {{ form_end(formulario)}}

{% endblock %}
{% block javascripts %}
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
